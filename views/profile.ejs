<!DOCTYPE html>
<html lang="tr">

<head>
	<%- include('inc/metatag.ejs') %>
		<link rel="stylesheet" href="/css/style.css">
		<link rel="stylesheet" href="/css/popup.css">

		<title>
			<%= (locals.u2 ) ? u2+'\'s profile' : 'Profile' %>
		</title>
</head>

<body>
	<%- include('inc/site_version.ejs') %>
		<div class="cont">
			<div class="header">
				<div class="headercont">
					<div class="logo">
						<%- include('inc/logo.ejs') %>
					</div>
					<div class="search">
						<input type="text" name="search" id="search" placeholder="search box to here">
						<span class="searchbtn">
							<i class="fas fa-search"></i>
						</span>
					</div>
					<div class="right">
						<%- include('inc/header_right.ejs') %>
					</div>
				</div>
			</div>

			<div class="center prof">
				<div class="centercont">
					<%- include('inc/banner.ejs') %>
						<%- include('inc/sendpost.ejs') %>

							<div class="puser">
								<div class="pname">
									<div>
										<img class="lazyload" data-src="/img/profile2.jpg" alt="">
										<div>
											<%= (locals.u2) ? u2 : 'null' %>
												<%- (locals.verified)
													? '<span class="verified" title="Verified account"><i class="far fa-check-circle"></i></span>'
													: '' %>
										</div>
									</div>
									<div class="pbtn">
										<% if(locals.isme && isme){ %> <a href="/edit/">Edit</a>
											<% } else{ %>
												<a class="follow" data-username="<%= (locals.u2) ? u2 : 'javascript:void(0)' %>">
													<%= (locals.isfollowed && isfollowed) ? 'Unfollow' : 'Follow' %>
												</a>
												<% } %>

									</div>
								</div>
								<div class="userinfo">
									<div class="fullname">
										<%= (locals.u) ? u.fullname : '' %>
									</div>
									<div class="biography">
										<%= (locals.u) ? u.biography : '' %>
									</div>
								</div>
								<div class="pstatus">
									<a href="#">
										<% console.log(pcount) %>
											<div class="pcount">
												<%= (locals.pcount || pcount===0) ? pcount : 'null' %>
											</div>posts
									</a>
									<a href="#">
										<div class="pfollowers">
											<%= (locals.data) ? data.followers.c : 'null' %>
										</div>followers
									</a>
									<a href="#">
										<div class="pfollowings">
											<%= (locals.data) ? data.following.c : 'null' %>
										</div>following
									</a>
								</div>
							</div>
							<div class="posts">

							</div>
							<div class="loading">
								<img class="lazyload" data-src="/img/bird.gif" alt="loadinggif">
							</div>
							<div class="cright">right</div>
				</div>
			</div>

			<%- include('inc/share.ejs') %>
				<%- include('inc/report.ejs') %>
					<%- include('inc/popup.ejs') %>
						<i onclick="topFunction()" id="gotopbtn" title="Go to top" class="fas fa-arrow-up"></i>

						<script src="/js/jquery.min.js"></script>

						<script src="/js/lazysizes.min.js" async></script>
						<script src="/js/post.min.js"></script>
						<script src="/js/theme.min.js"></script>
						<script src="/js/fontawesome.js"></script>
						<script src="/js/index.min.js"></script>
						<script src="/js/addpost.js"></script>
						<script src="/js/popup.js"></script>
						<script src="/js/utm_source.js"></script>
</body>

</html>